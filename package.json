{
  "name": "claude-agent-sdk",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/backend",
    "packages/frontend"
  ],
  "scripts": {
    "dev:fe": "bun run --cwd packages/frontend dev",
    "dev:be": "bun run --cwd packages/backend dev",
    "build:fe": "bun run --cwd packages/frontend build",
    "build:be": "bun run --cwd packages/backend build",
    "start:fe": "bun run --cwd packages/frontend start",
    "start:be": "bun run --cwd packages/backend start"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.52",
    "chalk": "^5.6.2"
  }
}
